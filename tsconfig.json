{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "lib": ["ES2020", "dom"],
    "outDir": "./dist/lib/es6",
    "rootDir": "./src",
    "strict": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
